<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter"
          p:service-ref="userService"
          p:serviceName="UserServiceRMI"
          p:registryPort="1099"
          p:serviceInterface="ua.org.gostroy.communityJavaProject.rmi.rmi_spring.service.UserService" />

    <bean id="userService" class="ua.org.gostroy.communityJavaProject.rmi.rmi_spring.service.UserServiceImpl"/>

</beans>